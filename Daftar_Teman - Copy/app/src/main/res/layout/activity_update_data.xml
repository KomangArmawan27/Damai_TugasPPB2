<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".UpdateData">

    <EditText
        android:id="@+id/new_nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/white"
        android:hint="Nama baru"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/new_alamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/white"
        android:hint="Alamat baru"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/new_nohp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/white"
        android:hint="Nomor Handphone baru"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:textSize="15sp" />

    <!--    spinner role    -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Role"
        android:textSize="20dp" />

    <Spinner
        android:id="@+id/new_role"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!--    spinner role    -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Tim"
        android:textSize="20dp" />

    <Spinner
        android:id="@+id/new_tim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="UPDATE" />
</LinearLayout>